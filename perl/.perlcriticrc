severity  = 3

[InputOutput::ProhibitBacktickOperators]
only_in_void_context = 1

#Temporal measure
[-Subroutines::ProhibitExcessComplexity]
[-Modules::ProhibitExcessMainComplexity]

# This is a way to write code, it is not confusing
[-Variables::ProhibitConditionalDeclarations]

# Why should it be prohibited, if a function requires more options add them, or think on an efficient way
[-Subroutines::ProhibitManyArgs]

[RegularExpressions::ProhibitComplexRegexes]
# This can be modified, the right way depends on the context
max_characters = 620

[-InputOutput::RequireBriefOpen]
# This can be modified, the right way depends on the context. It should be changed to at least 10 or 5
# lines = 1000

[Modules::RequireExplicitPackage]
exempt_scripts = 0
